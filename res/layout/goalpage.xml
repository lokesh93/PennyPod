<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landbg"
    android:gravity="center_horizontal|center_vertical|top"
    android:orientation="vertical"
    android:weightSum="100"
    tools:ignore="NestedWeights" >

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:src="@drawable/backbutton"
        android:layout_marginRight="140dp" />
	
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_marginTop="15dp"
        android:layout_weight="15"
        android:background="@drawable/roundcorner"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="100" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:text="Goal&#10;Amount:"
            android:layout_marginRight="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="80"
            android:background="@drawable/whitebg"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:layout_marginBottom="10dp"
            tools:ignore="NestedWeights" />

	</LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="15"
        android:layout_height="0dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="100" >

	    <Spinner
	        android:id="@+id/spinnergoal"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="80"
	        android:background="@drawable/roundspinner"
	        tools:ignore="NestedWeights"
	        android:textColor="#ffffff" />

	 </LinearLayout>
	 
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="15"
        android:src="@drawable/calcbutton"
        android:scaleType="fitXY"
        android:background="@null"
        tools:ignore="ContentDescription" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="15"
        android:layout_height="0dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="100" >

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="50"
	        android:src="@drawable/threemonths"
	        tools:ignore="NestedWeights,ContentDescription" />
	
	    <EditText
	        android:id="@+id/textView1"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="50"
	        android:inputType="numberDecimal"
	        android:paddingTop="15dp"
	        android:text="Large Text"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        tools:ignore="HardcodedText" />
    
    </LinearLayout>
    
     
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="15"
        android:layout_height="0dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="100" >

	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="50"
	        android:src="@drawable/sixmonths"
	        tools:ignore="NestedWeights,ContentDescription" />
	
	    <EditText
	        android:id="@+id/textView2"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="50"
	        android:inputType="numberDecimal"
	        android:paddingTop="15dp"
	        android:text="Large Text"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        tools:ignore="HardcodedText" />
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="15"
        android:layout_height="0dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="100" >

	    <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="50"
	        android:src="@drawable/oneyear"
	        tools:ignore="ContentDescription" />
	
	    <EditText
	        android:id="@+id/textView3"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:layout_weight="50"
	        android:inputType="numberDecimal"
	        android:paddingTop="15dp"
	        android:text="Large Text"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        tools:ignore="DuplicateIds,HardcodedText" />
    
    </LinearLayout>
    
</LinearLayout>

    
